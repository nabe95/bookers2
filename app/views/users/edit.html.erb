<div class= container >
  <div class="justify-content-center">
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
  <%= form_with model: @user do |f| %>

  <div>
    <h4>Name</h4>
    <%= f.text_field :name, autofocus: true, id:"inputName" %>
  </div>

  <div>
  <h4>Image</h4>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>

  <div>
  <h4>Introduction</h4>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
  </div>

  <%= f.submit "Update User", class:"btn btn-secondary" %>
<% end %>

  </div>
</div>