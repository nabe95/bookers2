<div class="container px-5 px-sm-0">
  <div class="row">
    
  <div class='col-md-3'>
    <%= render 'books/list', user: @user,book: @book %>
  </div>


<div class="container col-md-8 offfset-md-1">
  
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, "/books/#{book.id}" %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div
