<div class="container px-5 px-sm-0">
  <div class="row">
    
  <div class='col-md-3'>
    <%= render 'list', user: @user,book: @book %>
  </div>

<div class="container col-md-8 offfset-md-1">
<h1>Book detail</h1>
  <table class="table">
    <tbody>
    <tr>
      <td><%= image_tag @book.user.get_profile_image(100,100) %><br><%= @book.user.name %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book.id) %>
          <% end %>
      </td>
      <td>
          <% if @book.user == current_user %>
          <%= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          <% end %>
      </td>
    </tr>
    </tbody>
  </table>
  </div>
</div>
</div>